	// 发送请求
	resp, err := c.httpClient.Do(httpReq)
	if err != nil {
		return idl.{{.Output}}{}, fmt.Errorf("failed to send request: %v", err)
	}
	defer resp.Body.Close()

	// 检查响应状态
	if resp.StatusCode != http.StatusOK {
		return idl.{{.Output}}{}, fmt.Errorf("unexpected status code: %d", resp.StatusCode)
	}

	// 反序列化响应
	var response idl.{{.Output}}
	if err := json.NewDecoder(resp.Body).Decode(&response); err != nil {
		return idl.{{.Output}}{}, fmt.Errorf("failed to decode response: %v", err)
	}

	return response, nil
}
